{
  "name": "dropid",
  "version": "1.0.0",
  "description": "Human-readable, prefixed unique identifiers for database models",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "npm run prepublishOnly && npm publish"
  },
  "keywords": [
    "id",
    "identifier",
    "unique-id",
    "uuid",
    "nanoid",
    "database",
    "orm",
    "drizzle",
    "prisma",
    "typeorm",
    "prefixed-id",
    "readable-id",
    "human-readable",
    "multi-tenant",
    "stripe-style-ids"
  ],
  "author": "Gold Dick <goldick60@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/golddick/dropid.git"
  },
  "bugs": {
    "url": "https://github.com/golddick/dropid/issues"
  },
  "homepage": "https://github.com/golddick/dropid#readme",
  "dependencies": {
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
